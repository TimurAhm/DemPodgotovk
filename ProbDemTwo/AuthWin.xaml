<Window x:Class="ProbDemTwo.AuthWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProbDemTwo"
        mc:Ignorable="d"
        Title="AuthWin" MinHeight="450" MinWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <Image Source="/ResoursesSSS/logo.png" Width="200" Height="200"/>
            <Label Content="Введите логин/Фамилию"/>
            <TextBox Name="tbLogin" Width="200" Height="25"/>
            <Label Content="Введите пароль/Номер полиса ОМС"/>
            <TextBox Name="tbPassword" Width="200" Height="25"/>
            <Button Content="Войти" Click="btLoginClick" Width="200" Height="25" Margin="0,20,0,0"/>
            <Button Content="Войти как гость" Click="btLoginGuestClick" Width="170" Height="25" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
